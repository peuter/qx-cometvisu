<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<pages xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       design="metal" xsi:noNamespaceSchemaLocation="../visu_config.xsd" backend="oh"
       scroll_speed="0" enable_column_adjustment="true" lib_version="7">
  <meta>
    <plugins>
      <plugin name="infoaction" />
    </plugins>
    <mappings>
      <mapping name="OpenClose">
        <entry value="1">
          <icon name="fts_window_1w_open" color="red" />
        </entry>
        <entry value="0">
          <icon name="fts_window_1w" />
        </entry>
      </mapping>
      <mapping name="DoorOpenClose">
        <entry value="1">
          <icon name="fts_door_open" color="red" />
        </entry>
        <entry value="0">
          <icon name="fts_door" />
        </entry>
      </mapping>
      <mapping name="UpDown">
        <entry value="0">
          <icon name="control_up" />
        </entry>
        <entry value="1">
          <icon name="conrol_down" />
        </entry>
      </mapping>
      <mapping name="DaWeg">
        <entry value="0">Weg</entry>
        <entry value="1">Da</entry>
      </mapping>
      <mapping name="OnOff">
        <entry value="0">O</entry>
        <entry value="1">I</entry>
      </mapping>
      <mapping name="AudioMute">
        <entry value="0">
          <icon name="audio_audio" />
        </entry>
        <entry value="1">
          <icon name="audio_volume_mute" />
        </entry>
      </mapping>
      <mapping name="PlayStop">
        <entry value="0">
          <icon name="audio_stop" />
        </entry>
        <entry value="1">
          <icon name="audio_play" />
        </entry>
      </mapping>
      <mapping name="AudioNextPrev">
        <entry value="0">
          <icon name="audio_rew" />
        </entry>
        <entry value="1">
          <icon name="audio_ff" />
        </entry>
      </mapping>
      <mapping name="Socket">
        <entry value="0">
          <icon name="message_socket" />
        </entry>
        <entry value="1">
          <icon name="message_socket" />
        </entry>
      </mapping>
      <mapping name="Shutter">
        <entry value="UP">&#8593;</entry>
        <entry value="STOP">o</entry>
        <entry value="DOWN">&#8595;</entry>
      </mapping>
      <mapping name="Sign">
        <entry range_min="-1e99" range_max="0">Negativ</entry>
        <entry value="0">Null</entry>
        <entry range_min="0" range_max="1e99">Positiv</entry>
      </mapping>
      <mapping name="IR_RECEIVER">
        <entry value="ON">An</entry>
        <entry value="OFF">Aus</entry>
        <entry value="VOL_UP">Vol+</entry>
        <entry value="VOL_DOWN">Vol-</entry>
        <entry value="INP_VAUX">Multiroom</entry>
        <entry value="INP_VCR">TV</entry>
      </mapping>
      <mapping name="AudioSinks">
        <entry value="combined-music">Alle</entry>
        <entry value="busmaster">Badezimmer</entry>
        <entry value="raspberrypi">Schlafzimmer</entry>
        <entry value="dockstar">Schlafzimmer</entry>
      </mapping>
      <mapping name="RadioStations">
        <entry value="0">Aus</entry>
        <entry value="1">Hellweg Radio</entry>
        <entry value="2">1Live</entry>
        <entry value="3">WDR2</entry>
        <entry value="4">Antenne Bayern</entry>
        <entry value="5">MPD-Stream</entry>
      </mapping>
      <mapping name="RadioStationsShort">
        <entry value="0">Aus</entry>
        <entry value="1">Hellweg</entry>
        <entry value="2">1Live</entry>
        <entry value="3">WDR2</entry>
        <entry value="4">Bayern</entry>
        <entry value="5">MPD</entry>
      </mapping>
      <mapping name="Weather">
        <entry value="Thunder">Gewitter</entry>
        <entry value="Storm">Sturm</entry>
        <entry value="Rain and snow">Regen und Schnee</entry>
        <entry value="Rain and Sleet">Regen und Schneeregen</entry>
        <entry value="Snow and Sleet">Schnee und Schneeregen</entry>
        <entry value="Freezing Drizzle">Gefrierender Nieselregen</entry>
        <entry value="Few Showers">Nieselregen</entry>
        <entry value="Freezing Rain">Gefrierender Regen</entry>
        <entry value="Light Freezing Rain">leicht gefrierender Regen</entry>
        <entry value="Rain">Regen</entry>
        <entry value="Snow Flurries">Schneegestöber</entry>
        <entry value="Light Snow">Leichter Schneeschauer</entry>
        <entry value="Blowing Snow">Schneetreiben</entry>
        <entry value="Snow">Starker Schneefall</entry>
        <entry value="Sleet">Schneeregen</entry>
        <entry value="Dust">Staub</entry>
        <entry value="Fog">Neblig</entry>
        <entry value="Wind">Stürmisch</entry>
        <entry value="Cold">Kalt</entry>
        <entry value="Cloudy">Bewölkt</entry>
        <entry value="Mostly Cloudy Night">Überwiegend Bewölkt (Nacht)</entry>
        <entry value="Mostly Cloudy Day">Überwiegend Bewölkt</entry>
        <entry value="Partly Cloudy Night">teilweise Bewölkt (Nacht)</entry>
        <entry value="Partly Cloudy Day">teilweise Bewölkt</entry>
        <entry value="Clear Night">Klare Nacht</entry>
        <entry value="Sunny">Sonnig</entry>
        <entry value="Hot">Heiß</entry>
        <entry value="Scattered Thunder">Vereinzelte Gewitter</entry>
        <entry value="Scattered Showers">Vereinzelt Niederschlag</entry>
        <entry value="Thundershowers">Gewitterregen</entry>
        <entry value="Snow-Showers">Schneefall</entry>
        <entry value="Scattered Thundershowers">Vereinzelter Gewitterregen</entry>
      </mapping>
      <mapping name="Modus">
        <entry value="0">
          <icon name="scene_day" />Tag
        </entry>
        <entry value="1">
          <icon name="scene_night" color="orange" />Abend
        </entry>
        <entry value="2">
          <icon name="scene_sleeping" color="blue" />Nacht
        </entry>
      </mapping>
      <mapping name="Presence">
        <entry value="Wohnzimmer">
          <icon name="scene_livingroom"/>
          Wohnen
        </entry>
        <entry value="Schlafzimmer">
          <icon name="scene_sleeping"/>
          Schlafen
        </entry>
        <entry value="Büro">
          <icon name="scene_office"/>
          Büro
        </entry>
        <entry value="Flur OG">
          <icon name="scene_hall"/>
          OG
        </entry>
        <entry value="Treppenhaus">
          <icon name="scene_stairs"/>
          DG
        </entry>
        <entry value="Badezimmer">
          <icon name="scene_bathroom"/>
          Bad
        </entry>
        <entry value="Küche">
          <icon name="scene_kitchen"/>
          Küche
        </entry>
      </mapping>
    </mappings>
    <stylings>
      <styling name="RedGreen">
        <entry value="0">red</entry>
        <entry value="1">green</entry>
      </styling>
      <styling name="GreenRed">
        <entry value="1">red</entry>
        <entry value="0">green</entry>
      </styling>
      <styling name="GreyGreen">
        <entry value="0">grey</entry>
        <entry value="1">green</entry>
      </styling>
      <styling name="GreenGrey">
        <entry value="1">grey</entry>
        <entry value="0">green</entry>
      </styling>
      <styling name="GreyGreenBg">
        <entry value="0">grey_bg</entry>
        <entry value="1">green_bg</entry>
      </styling>
      <styling name="BluePurpleRed">
        <entry range_min="-100" range_max="0">blue</entry>
        <entry value="0">purple</entry>
        <entry range_min="0" range_max="100">red</entry>
      </styling>
      <styling name="BluePurpleRedTemp">
        <entry range_min="0" range_max="18">blue</entry>
        <entry range_min="18" range_max="21">purple</entry>
        <entry range_min="21" range_max="100">red</entry>
      </styling>
      <styling name="RadioOff">
        <entry value="0">grey</entry>
      </styling>
      <styling name="Radio1">
        <entry value="1">grey</entry>
      </styling>
      <styling name="Radio2">
        <entry value="2">grey</entry>
      </styling>
      <styling name="Radio3">
        <entry value="3">grey</entry>
      </styling>
      <styling name="Radio4">
        <entry value="4">grey</entry>
      </styling>
      <styling name="Radio5">
        <entry value="5">grey</entry>
      </styling>
    </stylings>
  </meta>
  <page name="Übersicht" showtopnavigation="false" shownavbar-left="false" showfooter="false">
    <navbar position="top" dynamic="true" width="200px">
      <pagejump target="Übersicht">
        <layout colspan="0" />
        <label>
          <icon name="control_building_empty" />
          Übersicht
        </label>
      </pagejump>
      <line>
        <layout colspan="0" />
      </line>
      <pagejump target="Wohnzimmer">
        <layout colspan="0" />
        <label>
          <icon name="scene_livingroom" />
          Wohnen
        </label>
        <widgetinfo>
          <info format="%d">
            <layout colspan="0" />
            <address transform="OH:number" mode="read" variant="">Temperature_FF_Living</address>
          </info>
        </widgetinfo>
      </pagejump>
      <pagejump target="Schlafzimmer">
        <layout colspan="0" />
        <label>
          <icon name="scene_sleeping" />
          Schlafen
        </label>
        <widgetinfo>
          <info format="%d">
            <layout colspan="0" />
            <address transform="OH:number" mode="read" variant="">Temperature_SF_Bed</address>
          </info>
        </widgetinfo>
      </pagejump>
      <pagejump target="Büro">
        <layout colspan="0" />
        <label>
          <icon name="it_pc" />
          Büro
        </label>
      </pagejump>
      <pagejump target="Küche">
        <layout colspan="0" />
        <label>
          <icon name="scene_dinner" />
          Küche
        </label>
        <widgetinfo>
          <info format="%d">
            <layout colspan="0" />
            <address transform="OH:number" mode="read" variant="">Temperature_FF_Kitchen</address>
          </info>
        </widgetinfo>
      </pagejump>
      <pagejump target="Bad">
        <layout colspan="0" />
        <label>
          <icon name="scene_bath" />
          Bad
        </label>
      </pagejump>
      <pagejump target="Flure">
        <layout colspan="0" />
        <label>
          <icon name="scene_hall" />
          Flure
        </label>
      </pagejump>
      <pagejump target="Garage">
        <layout colspan="0" />
        <label>
          <icon name="fts_garage" />
          Garage
        </label>
      </pagejump>
      <line>
        <layout colspan="0" />
      </line>
      <pagejump target="Multiroom">
        <layout colspan="0" />
        <label>
          <icon name="audio_sound" />
          Audio
        </label>
      </pagejump>
      <pagejump target="Temperaturen">
        <layout colspan="0" />
        <label>
          <icon name="temp_temperature" />
          Temperatur
        </label>
      </pagejump>
      <pagejump target="Netzwerk">
        <layout colspan="0" />
        <label>
          <icon name="it_network" />
          Netzwerk
        </label>
      </pagejump>
    </navbar>
    <group name="Allgemein">
      <layout colspan="6" />
      <info align="center" mapping="Modus">
        <layout colspan="2" />
        <address transform="OH:number" variant="">Scene_General</address>
      </info>
      <info align="center" mapping="Presence">
        <layout colspan="2" />
        <address transform="OH:string" variant="">GLOB_Praesenz</address>
      </info>
      <info align="center">
        <layout colspan="2" />
        <address transform="OH:datetime" variant="">TimeOfArrival</address>
      </info>
      <switch mapping="OnOff" styling="GreyGreen">
        <layout colspan="2" />
        <label>Anwesend</label>
        <address transform="OH:switch" variant="">Present</address>
      </switch>
      <switch mapping="OnOff" styling="GreyGreen">
        <layout colspan="2" />
        <label>Arbeitstag</label>
        <address transform="OH:switch" variant="">Workday</address>
      </switch>
      <switch mapping="OnOff" styling="GreyGreen">
        <layout colspan="2" />
        <label>Wecker</label>
        <address transform="OH:switch" variant="">GLOB_Wecker</address>
      </switch>
      <group nowidget="true">
        <layout colspan="4" />
        <text>
          <layout colspan="2" />
          <label><icon name="temp_outside" />Außen</label>
        </text>
        <info format="%.1f °C" class="bottom_label">
          <layout colspan="1" />
          <label>Aktuell</label>
          <address transform="OH:number" variant="">Weather_Temperature</address>
        </info>
        <info format="%s °C" class="bottom_label">
          <layout colspan="1" />
          <label>Prognose</label>
          <address transform="OH:string" variant="">Weather_Forecast_Temp</address>
        </info>
      </group>
      <info mapping="Weather">
        <layout colspan="2" />
        <address transform="OH:string" variant="">Weather_Text</address>
      </info>
    </group>
  </page>
</pages>
